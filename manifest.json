{
  "manifest_version": 3,
  "name": "Focus-Pocus",
  "description": "A spooky extension that scares you to concentrate - or else!",
  "version": "1.0.0",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "webNavigation"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/ghody16.png",
      "32": "/images/ghody32.png",
      "48": "/images/ghody48.png",
      "128": "/images/ghody128.png"
    }
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "css": [
        "main.css"
      ],
      "matches": [
        "*://https://youtube.com/*",
        "*://https://facebook.com/*",
        "*://https://x.com/*",
        "*://https://tiktok.com/*",
        "*://https://instagram.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}